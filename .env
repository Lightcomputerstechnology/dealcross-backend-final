# ─── GENERAL ─────────────────────────────
APP_NAME=Dealcross
APP_ENV=production
APP_PORT=8000

# ─── DATABASE CONFIG ─────────────────────
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_postgres_user
DB_PASSWORD=your_postgres_password
DB_NAME=dealcross_db

# ─── SECURITY KEYS ───────────────────────
SECRET_KEY=super-secret-key-for-jwt
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ─── PAYMENT GATEWAYS ────────────────────
PAYSTACK_SECRET=sk_test_your_paystack_secret
FLW_SECRET=FLWSECK-your-flutterwave-secret
NOWPAY_API_KEY=your_nowpayments_api_key

# ─── EMAIL SENDER (OPTIONAL) ─────────────
EMAIL_HOST=smtp.yourprovider.com
EMAIL_PORT=587
EMAIL_USER=no-reply@dealcross.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM_NAME=Dealcross Support

# ─── RATE LIMIT (OPTIONAL) ───────────────
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_TIME_WINDOW=60

# ─── FRONTEND DOMAIN ─────────────────────
FRONTEND_URL=https://dealcross.com

# ─── CALLBACK/WEBHOOK URLs (Optional Overrides) ──────
PAYSTACK_CALLBACK=https://dealcross.com/payment/verify/paystack
FLUTTERWAVE_CALLBACK=https://dealcross.com/payment/verify/flutterwave
NOWPAY_CALLBACK=https://dealcross.com/payment/webhook/nowpayments